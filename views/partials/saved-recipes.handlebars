<section class="card">
    <h3>{{this.recipe_name}}</h3>
    <p>Ingredients:</p>
    <ul>
        {{#each ingredients as |ingredient|}}
            <li>{{ingredient}}</li>
        {{/each}}
    </ul>
    <p>Calories: {{this.calories}}</p>
    <p>Protein: {{this.protein}}</p>
    <p>Carbs: {{this.carbs}}</p>
    <p>Fats: {{this.fats}}</p>
</section>